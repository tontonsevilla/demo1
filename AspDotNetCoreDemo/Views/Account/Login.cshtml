@model AspDotNetCoreDemo.Models.Account.LoginViewModel

<div class="container">
    <div class="row align-self-center">
        <div class="col">
            <!-- Material form login -->
            <div class="card">

                <h5 class="card-header special-color-dark white-text text-center py-4">
                    <strong>Sign in</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <form class="needs-validation" style="color: #757575;" asp-action="Login" novalidate>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <!-- Email -->
                        <div class="md-form">
                            @Html.TextBoxWithRequiredAttributeFor(m => m.UserName, new { @class = "form-control" })
                            @Html.LabelFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                        </div>

                        <!-- Password -->
                        <div class="md-form">
                            @Html.PassWithRequiredAttributeFor(m => m.Password, new { @class = "form-control" })
                            @Html.LabelFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-around">
                            <div>
                                <!-- Remember me -->
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                            <div>
                                <!-- Forgot password -->
                                <a href="">Forgot password?</a>
                            </div>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>

                        <!-- Register -->
                        <p>
                            Not a member?
                            <a href="~/Account/Register">Register</a>
                        </p>

                        <div class="d-none">
                            <!-- Social login -->
                            <p>or sign in with:</p>
                            <a type="button" class="btn-floating btn-fb btn-sm">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a type="button" class="btn-floating btn-tw btn-sm">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a type="button" class="btn-floating btn-li btn-sm">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a type="button" class="btn-floating btn-git btn-sm">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>

                    </form>
                    <!-- Form -->

                </div>

            </div>
            <!-- Material form login -->
        </div>
    </div>
</div>